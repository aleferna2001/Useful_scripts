class Blob:#definindo a class 'blob'
    from random import randrange
    def __init__(self,size=(randrange(5,20)),color=(0,0,0),pos=(100,100),mov_range=5):#definindo argumentos necessários para a construção de um blob
        self.color=color
        self.x=pos[0]
        self.y=pos[1]
        self.size=size#determinando o tamanho de seu raio
        self.mov_range=mov_range#determina o range de movimentação do blob
    def move(self):#definindo a movimentação
        from random import randrange
        self.move_x=randrange(-int(self.mov_range/2),int(self.mov_range/2)+1)
        self.move_y=randrange(-int(self.mov_range/2),int(self.mov_range/2)+1)
        self.x+=self.move_x
        self.y+=self.move_y
